{
  "name": "rsbuild-nodejs-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:server": "tsc --project ./server/tsconfig.json",
    "dev:server": "ts-node ./server/server.ts",
    "clean": "rm -rf dist",
    "dev:client": "rsbuild dev",
    "build:client": "rsbuild build",
    "build": "npm run clean && npm run build:server && npm run build:client",
    "dev": "npm run dev:server",
    "start": "npm run build && node ./dist/server/server.js",
    "lint": "eslint src",
    "format:check": "prettier . --check",
    "format": "prettier --write 'src/**/*.{js,ts,jsx,tsx,css}' 'server/**/*.{js,ts}'",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@rsbuild/core": "^1.6.1",
    "@rsbuild/plugin-react": "^1.4.1",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "express": "^5.1.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.16"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
